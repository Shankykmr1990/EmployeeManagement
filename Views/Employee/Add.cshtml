@model EmployeeViewModel
@{
    ViewData["Title"] = "All Employees";
}
<div class="p-4 container">
    <div class="row p-4">
        <div class="col-md-12">
            <h3>Add New Employee</h3>
        </div>
    </div>
</div>
<form asp-controller="Employee" asp-action="Add" method="post">
<div class="row p-4">
    <div class="col-md-6">
        
            <div class="mb-3">
                <label for="FirstName" class="form-label fw-bold">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control"/>
                <span asp-validation-for="FirstName"></span>
            </div>
           
            <div class="mb-3">
                <label for="datetimepicker" class="form-label fw-bold">Date of Birth</label>
                <input asp-for="DateofBirth" type="date" class="form-control"/>
                <span asp-validation-for="DateofBirth"></span>
            </div>
           
            <div class="mb-3">
                <label for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
           
            <div class="mb-3">
                <label for="Address" class="form-label fw-bold">Address</label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address"></span>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive" checked />
                    <label class="form-check-label fw-bold" for="isActive">Mark as Active</label>
                    <span asp-validation-for="IsActive"></span>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
       
    </div>
    <div class="col-md-6">
            <div class="mb-3">
                <label for="LastName" class="form-label fw-bold">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control" name="lastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="mb-3">
                <label for="Gender" class="form-label fw-bold">Gender</label>
                <div class="d-flex mb-3">
                    <div class="form-check px-4 mb-3">
                        <input asp-for="Gender" class="form-check-input" value="male" type="radio" name="Gender" />
                        <label class="form-check-label fw-bold" for="Gender">Male</label>
                        <span asp-validation-for="Gender"></span>
                    </div>
                    <div class="form-check px-4 mb-3">
                        <input asp-for="Gender" class="form-check-input" value="female" type="radio" name="Gender" />
                        <label class="form-check-label fw-bold" for="Gender">Female</label>
                        <span asp-validation-for="Gender"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Please Choose Department</label><br />
                <select asp-for="DepartmentId" asp-items="ViewBag.Departments"></select>
            </div>
    </div>
</div>
</form>